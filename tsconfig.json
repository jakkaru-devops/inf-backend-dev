{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist/dev",
    "baseUrl": "./src/app.ts",
    "paths": {
      "*": ["./node_modules/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
